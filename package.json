{
  "private": true,
  "license": "Apache-2.0",
  "author": "Kinvey, Inc.",
  "scripts": {
    "clean": "rimraf coverage dist docs",
    "prebuild": "rimraf dist",
    "build": "concurrently \"npm run build:angular\" \"npm run build:core\" \"npm run build:html5\" \"npm run build:node\" \"npm run build:phonegap\"",
    "build:angular": "babel --no-comments --out-dir dist/angular src/angular",
    "build:core": "babel --no-comments --out-dir dist/core src/core",
    "build:html5": "babel --no-comments --out-dir dist/html5 src/html5",
    "build:nativescript": "tsc --outDir dist/nativescript src/nativescript/**/*.ts",
    "build:node": "babel --no-comments --out-dir dist/node src/node",
    "build:phonegap": "babel --no-comments --out-dir dist/phonegap src/phonegap",
    "postbuild": "node scripts/postbuild.js",
    "preci": "rimraf coverage",
    "ci": "concurrently \"npm run lint\" \"npm run test:cover\" \"npm run test:karma\"",
    "predocs": "rimraf docs",
    "docs": "esdoc -c esdoc.json",
    "lint": "concurrently \"npm run lint:angular\" \"npm run lint:html5\" \"npm run lint:node\" \"npm run lint:phonegap\"",
    "lint:angular": "eslint src/angular/**",
    "lint:core": "eslint src/core/**",
    "lint:html5": "eslint src/html5/**",
    "lint:nativescript": "tslint src/nativescript/**/*.ts --exclude **/node_modules/**/* --exclude **/*.d.ts",
    "lint:node": "eslint src/node/**",
    "lint:phonegap": "eslint src/phonegap/**",
    "test": "concurrently \"npm run test:angular\" \"npm run test:html5\" \"npm run test:node\" \"npm run test:phonegap\"",
    "test:angular": "mocha --require babel-register -s 250 test/unit/angular/**/*.spec.js",
    "test:html5": "mocha --require babel-register -s 250 test/unit/html5/**/*.spec.js",
    "test:nativescript": "mocha --require ts-node/register -s 250 test/unit/nativescript/**/*.spec.ts",
    "test:node": "mocha --require babel-register -s 250 test/unit/node/**/*.spec.js",
    "test:phonegap": "mocha --require babel-register -s 250 test/unit/phonegap/**/*.spec.js",
    "test:cover": "istanbul cover _mocha -- --require babel-register -s 250 test/unit/**/*.spec.js",
    "test:karma": "concurrently \"npm run test:karma:angular\" \"npm run test:karma:html5\" \"npm run test:karma:phonegap\"",
    "test:karma:angular": "karma start test/unit/angular/karma.conf.js",
    "test:karma:html5": "karma start test/unit/html5/karma.conf.js",
    "test:karma:phonegap": "karma start test/unit/phonegap/karma.conf.js",
    "preversion": "rimraf node_modules && npm install && npm test",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "kinvey-angular-sdk": "file:src/angular",
    "kinvey-html5-sdk": "file:src/html5",
    "kinvey-js-sdk": "file:src/core",
    "kinvey-nativescript-sdk": "file:src/nativescript",
    "kinvey-node-sdk": "file:src/node",
    "kinvey-phonegap-sdk": "file:src/phonegap"
  },
  "devDependencies": {
    "@types/chai": "4.0.4",
    "@types/chai-as-promised": "7.1.0",
    "@types/mocha": "2.2.43",
    "@types/node": "8.0.46",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.0",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "concurrently": "3.5.0",
    "esdoc": "1.0.3",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "4.8.0",
    "eslint-config-airbnb-base": "12.0.2",
    "eslint-plugin-import": "2.7.0",
    "expect": "^1.20.2",
    "fs-extra": "4.0.2",
    "istanbul": "1.1.0-alpha.1",
    "karma": "1.7.1",
    "karma-browserstack-launcher": "1.3.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-firefox-launcher": "1.0.1",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.4",
    "karma-safari-launcher": "1.0.0",
    "karma-sauce-launcher": "1.2.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.5",
    "mocha": "4.0.1",
    "nock": "9.0.22",
    "pre-commit": "1.2.2",
    "proxyquire": "1.8.0",
    "replace-in-file": "3.0.0-beta.2",
    "request": "2.83.0",
    "rimraf": "2.6.2",
    "sinon": "4.0.1",
    "sinon-chai": "2.14.0",
    "tns-core-modules": "3.2.0",
    "tns-platform-declarations": "3.2.0",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.3.0",
    "typescript": "2.5.3",
    "webpack": "3.6.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
