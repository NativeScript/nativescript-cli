{
	"rulesDirectory": "node_modules/tslint-microsoft-contrib",
	"extends": [
		"tslint-config-prettier"
	],
	"rules": {
		"deprecation": true,
		"class-name": true,
		"curly": true,
		"mocha-avoid-only": true,
		"interface-name": true,
		"jsdoc-format": true,
		"max-line-length": [
			false,
			140
		],
		"prefer-const": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-variable": true,
		"no-shadowed-variable": false,
		"no-empty": true,
		"no-eval": true,
		"no-switch-case-fall-through": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"no-var-requires": false,
		"no-floating-promises": true,
		"quotemark": [
			false,
			"double"
		],
		"space-before-function-paren": false,
		"switch-default": false,
		"trailing-comma": [
			false,
			{
				"multiline": "always",
				"singleline": "always"
			}
		],
		"triple-equals": [
			true,
			"allow-null-check"
		],
		"use-isnan": true,
		"variable-name": [
			true,
			"ban-keywords",
			"allow-leading-underscore"
		]
	}
}
